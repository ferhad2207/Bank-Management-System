<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.farhad.controllers.OverviewController"
            styleClass="dashboard-root"
            stylesheets="@../style/dashboard.css">

    <left>
        <fx:include source="dashboard_menu.fxml" />
    </left>

    <center>
        <VBox spacing="100.0" alignment="CENTER">
            <HBox alignment="CENTER">
                <TableView fx:id="outcomes"/>
                <TableView fx:id="incomes"/>
            </HBox>
            <HBox spacing="50.0" alignment="CENTER">
                <VBox spacing="5.0" alignment="TOP_CENTER">
                    <HBox alignment="CENTER">
                        <Label styleClass="dashboard-overview-header" text="Main Account" />
                    </HBox>
                    <Region minWidth="30.0"/>
                    <HBox alignment="CENTER_LEFT">
                        <Label styleClass="dashboard-overview-key" text="Account name: "/>
                        <Label styleClass="dashboard-overview-value" fx:id="accountId" text="User User"/>
                    </HBox>
                    <HBox alignment="CENTER_LEFT">
                        <Label styleClass="dashboard-overview-key" text="Account type: "/>
                        <Label styleClass="dashboard-overview-value" fx:id="accountName" text="VIP" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT">
                        <Label styleClass="dashboard-overview-key" text="Amount of money: " />
                        <Label styleClass="dashboard-overview-value" fx:id="amountOfMoney" text="0$" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT">
                        <Label styleClass="dashboard-overview-key" text="Other account details: " />
                        <Label styleClass="dashboard-overview-value" fx:id="otherAccountDetails" text="Account details"/>
                    </HBox>
                </VBox>
                <VBox spacing="5.0" alignment="TOP_CENTER">
                    <HBox alignment="CENTER">
                        <Label styleClass="dashboard-overview-header" text="Last Product" />
                    </HBox>
                    <Region minWidth="30.0" />
                    <HBox alignment="CENTER_LEFT">
                        <Label styleClass="dashboard-overview-key" text="Product code: "/>
                        <Label styleClass="dashboard-overview-value" fx:id="productCode" text="1111" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT">
                        <Label styleClass="dashboard-overview-key" text="Product description: " />
                        <Label styleClass="dashboard-overview-value" fx:id="productDesc" text="Product description" />
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
    </center>

</BorderPane>
