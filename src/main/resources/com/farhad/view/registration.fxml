<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.farhad.controllers.RegistrationController"
            id="registration-page-root"
            stylesheets="@../style/registration_page.css">
    <top>
        <HBox spacing="25.0" alignment="CENTER_LEFT">
            <ImageView>
                <Image url="@../icons/registration.png" />
            </ImageView>
            <Label text="Sign Up" id="sign-up-label"/>
        </HBox>
    </top>

    <center>
        <VBox>
            <VBox>
                <HBox>
                    <Label text="Full Name:" />
                    <TextField />
                </HBox>
                <HBox>
                    <Label text="Customer Type:" />
                    <ChoiceBox fx:id="customerTypesChoiceBox" />
                </HBox>
                <HBox>
                    <HBox>
                        <Label text="Phone:" />
                        <TextField />
                    </HBox>
                    <HBox>
                        <Label text="Email:" />
                        <TextField />
                    </HBox>
                </HBox>
                <HBox>
                    <Label text="Username:" />
                    <TextField />
                </HBox>
                <HBox>
                    <HBox>
                        <Label text="Password" />
                        <PasswordField />
                    </HBox>
                    <HBox>
                        <Label text="Confirm Password:" />
                        <PasswordField />
                    </HBox>
                </HBox>
                <HBox>
                    <Label text="Other Details" />
                    <TextField />
                </HBox>
                <Separator />
            </VBox>
            <Label text="Have an account? Login" />
        </VBox>
    </center>

</BorderPane>
