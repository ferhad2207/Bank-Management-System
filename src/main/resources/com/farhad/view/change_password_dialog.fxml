<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.farhad.controllers.ChangePasswordDialogController"
      stylesheets="@../style/dialog_pane.css"
      alignment="CENTER_LEFT" spacing="10.0">
    <HBox>
        <Label text="Old Password" styleClass="dialog-labels" />
        <PasswordField styleClass="dialog-fields" fx:id="oldPasswordTextField"/>
    </HBox>
    <HBox>
        <Label text="New Password" styleClass="dialog-labels" />
        <PasswordField styleClass="dialog-fields" fx:id="newPasswordTextField"/>
    </HBox>
    <HBox>
        <Label text="Confirm Password" styleClass="dialog-labels" />
        <PasswordField styleClass="dialog-fields" fx:id="confirmPasswordTextField"/>
    </HBox>
</VBox>
